        <div class="col-md-12 card shadow mb-4 p-0">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Profiles ({{ profiles|length }})</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered" width="100%" cellspacing="0" role="grid" style="width: 100%">
                    <thead>
                        <tr role="row">
                            <th>Profile</th>
                            <th class="text-center">Default</th>
                            <th class="text-center">Current</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for profile in profiles %}
                        <tr role="row">
                            <td>{{ profile.name }}</td>
                            <td class="text-center">
                                {% if profile.default %}
                                <i class="far fa-check fa-2" style="color: green"></i>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                {% if profile.current %}
                                <i class="far fa-check fa-2" style="color: green"></i>
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
